{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "math-admin",
  "version": "0.8.0",
  "identifier": "com.math.admin",
  "build": {
    "frontendDist": "../admin/root/dist",
    "devUrl": "http://127.0.0.1:5778",
    "beforeDevCommand": "pnpm dev:admin",
    "beforeBuildCommand": "pnpm build:admin"
  },
  "app": {
    "windows": [
      {
        "title": "math-admin",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "shortDescription": "高等数学考试系统-管理端",
    "longDescription": "高等数学考试系统-管理端",
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true
      }
    },

    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
